#***********************************************************************
# Environment settings
#***********************************************************************
# DO NOT EDIT! WILL BE CHANGED BY FVWMFORM-FNS-BASESETUP!

#-----------------------------------------------------------------------
# The actual theme. Be changed dynamically via FuncChangeDecor
#-----------------------------------------------------------------------
InfoStoreAdd used_theme "Tribal"

#-----------------------------------------------------------------------
# Banner image for FvwmBanner
#-----------------------------------------------------------------------
InfoStoreAdd used_banner "/usr/local/bin/../share/fvwm-nightshade/artwork/splashs/splash_fns_small.png"

#-----------------------------------------------------------------------
# Run Banner at startup?
#-----------------------------------------------------------------------
SetEnv SplashOn "0"

#-----------------------------------------------------------------------
# default used font for all Fvwm parts
#-----------------------------------------------------------------------
InfoStoreAdd used_font "Sans"

#-----------------------------------------------------------------------
# default font size
#-----------------------------------------------------------------------
InfoStoreAdd fontsize "12"

#-----------------------------------------------------------------------
# The actual layout
#-----------------------------------------------------------------------
InfoStoreAdd used_layout "Horizontal"

#-----------------------------------------------------------------------
# The actual applet tint level
#-----------------------------------------------------------------------
InfoStoreAdd used_applettint "20"

#-----------------------------------------------------------------------
# The actual applet font color
#-----------------------------------------------------------------------
InfoStoreAdd used_appletfontcolor "white"


#***********************************************************************
# Default applications
#***********************************************************************

#-----------------------------------------------------------------------
# terminal
#-----------------------------------------------------------------------
InfoStoreAdd default_terminal "xterm -fn 10x20"                                                             "

#-----------------------------------------------------------------------
# browser
#-----------------------------------------------------------------------
InfoStoreAdd default_browser "firefox                                                               "

